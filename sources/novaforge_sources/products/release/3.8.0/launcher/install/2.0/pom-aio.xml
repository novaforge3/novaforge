<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.novaforge.products.launcher.install</groupId>
	<artifactId>novaforge-aio-3.8.0</artifactId>
	<packaging>beaver-launcher</packaging>
	<version>2.0</version>
	<name>NovaForge(tm) :: Products :: Launcher :: 3.8.0 :: NovaForge All-In-One</name>
	<description>NovaForge(tm) :: Products :: Launcher :: 3.8.0 :: NovaForge All-In-One</description>

	<properties>
	<!-- Custom Configuration -->
	<!-- Deployment Configuration -->
		<tmpDir>${local:home}/tmp/deployment</tmpDir>
		<logsDir>${local:home}/logs/deployment</logsDir>
		<deployFile>${local:home}/deployment.xml</deployFile>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.novaforge.products.server.install</groupId>
			<artifactId>server-aio</artifactId>
			<version>2.0</version>
			<type>beaver-server</type>
		</dependency>
		<dependency>
			<groupId>org.novaforge.products.process.install</groupId>
			<artifactId>novaforge_aio-3.8.0</artifactId>
			<version>2.0</version>
			<type>beaver-process</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.novaforge.beaver</groupId>
				<artifactId>beaver-deployment-plugin</artifactId>
				<version>3.6</version>
				<extensions>true</extensions>
				<configuration>
					<tempDirectory>${tmpDir}</tempDirectory>
					<logsDirectory>${logsDir}</logsDirectory>
					<deploymentFile>${deployFile}</deploymentFile>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.4.1</version>
				<executions>
					<execution>
						<id>auto-clean</id>
						<phase>install</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<filesets>
								<fileset>
									<directory>${tmpDir}</directory>
									<followSymlinks>false</followSymlinks>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>beaver-resolution</id>
			<activation>
				<property>
					<name>resolved</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<version>2.4.1</version>
						<executions>
							<execution>
								<id>metadata-clean</id>
								<phase>install</phase>
								<goals>
									<goal>clean</goal>
								</goals>
								<configuration>
									<filesets>
										<fileset>
											<directory>${settings.localRepository}</directory>
											<followSymlinks>false</followSymlinks>
											<includes>
												<include>**/resolver-status.properties</include>
												<include>**/_maven.repositories</include>
												<include>**/*.lastUpdated</include>
												<include>**/*.sha1</include>
											</includes>
										</fileset>
									</filesets>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>clean-local</id>
			<activation>
				<property>
					<name>clean</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<version>2.4.1</version>
						<executions>
							<execution>
								<id>auto-clean</id>
								<phase>install</phase>
								<goals>
									<goal>clean</goal>
								</goals>
								<configuration>
									<filesets>
										<fileset>
											<directory>${settings.localRepository}/org/novaforge/products/process</directory>
											<followSymlinks>false</followSymlinks>
										</fileset>
										<fileset>
											<directory>${settings.localRepository}/org/novaforge/products/data</directory>
											<followSymlinks>false</followSymlinks>
										</fileset>
									</filesets>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<repositories>
		<repository>
			<id>local_repo</id>
			<name>Local Repository</name>
			<url>file:///datas/repoMaven</url>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>local_repo</id>
			<name>Local Repository</name>
			<url>file:///datas/repoMaven</url>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
		</pluginRepository>
	</pluginRepositories>
</project>
