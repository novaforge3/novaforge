<?xml version="1.0" encoding="UTF-8"?>

<!--  
Generated by Novaforge installation from the nexus-web.xml template to support the CAS aunthentication.
Template: process/nexus/3.2.1-01/install/2.0/src/main/resources/etc/jetty/nexus-web.xml
-->
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>Sonatype Nexus</display-name>

  <listener>
    <listener-class>org.sonatype.nexus.bootstrap.osgi.BootstrapListener</listener-class>
  </listener>

  <filter>
    <filter-name>nexusFilter</filter-name>
    <filter-class>org.sonatype.nexus.bootstrap.osgi.DelegatingFilter</filter-class>
  </filter>
  
  <!-- Begin Novaforge Servlet filter for CAS authentication -->
  <filter>
    <filter-name>CAS Single Sign Out Filter</filter-name>
    <filter-class>org.jasig.cas.client.session.SingleSignOutFilter</filter-class>
  </filter>
  <filter>
    <filter-name>CAS Authentication Filter</filter-name>
    <filter-class>org.jasig.cas.client.authentication.AuthenticationFilter</filter-class>
    <init-param>
      <param-name>casServerLoginUrl</param-name>
      <param-value>https://@CAS_HOST@:@CAS_PORT@/cas/login</param-value>
    </init-param>
    <init-param>
      <param-name>service</param-name>
      <param-value>https://@CAS_HOST@:@CAS_PORT@/nexus-default/service/local/authentication/cas</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
    <filter-class>org.jasig.cas.client.util.HttpServletRequestWrapperFilter</filter-class>
  </filter>
  <!-- End Novaforge Servlet filter for CAS authentication -->
    
  <!-- Begin Novaforge listener for CAS authentication -->
  <listener>
    <listener-class>org.jasig.cas.client.session.SingleSignOutHttpSessionListener</listener-class>
  </listener>
  <!-- End Novaforge listener for  CAS authentication -->

  <filter-mapping>
    <filter-name>nexusFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>
  
  <!-- Begin Novaforge URL mapping for CAS authentication -->
  <filter-mapping>
    <filter-name>CAS Single Sign Out Filter</filter-name>
    <url-pattern>/service/local/authentication/cas</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CAS Authentication Filter</filter-name>
    <url-pattern>/service/local/authentication/cas</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
    <url-pattern>/service/local/authentication/cas</url-pattern>
  </filter-mapping>
  <!-- End Novaforge URL mapping for CAS authentication -->
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <error-page>
    <location>/error.html</location>
  </error-page>
</web-app>
