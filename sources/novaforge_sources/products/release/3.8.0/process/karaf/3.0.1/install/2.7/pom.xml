	<groupId>org.novaforge.products.process.install</groupId>
	<artifactId>karaf-3.0.1</artifactId>
	<packaging>beaver-process</packaging>
	<version>2.7</version>
	<name>NovaForge(tm) :: Products :: 3.8.0 :: Process :: Karaf :: Install :: 3.0.1 :: 2.7</name>
	<description>NovaForge(tm) :: Products :: 3.8.0 :: Process :: Karaf :: Install :: 3.0.1 :: 2.7</description>
	<dependencies>
		<dependency>
			<groupId>org.novaforge.products.process.install</groupId>
			<artifactId>jre-7u80</artifactId>
			<version>2.1</version>
			<type>beaver-process</type>
		</dependency>
