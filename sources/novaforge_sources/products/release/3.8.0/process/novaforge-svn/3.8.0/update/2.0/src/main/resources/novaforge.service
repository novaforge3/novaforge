[Unit]
Description=NovaForge Server
Requires=@MARIADB_SERVICE@.service
Wants=@HTTPD_SERVICE@.service @GITLAB_SERVICE@.service @GITLAB_DAEMON@.service
After=@HTTPD_SERVICE@.service @MARIADB_SERVICE@.service @GITLAB_SERVICE@.service @GITLAB_DAEMON@.service

[Service]
Type=oneshot

## User configuration
User=@NOVAFORGE_USER@
Group=@NOVAFORGE_GROUP@

## Scripts
ExecStart=@KARAF_BIN@ start clean
ExecStop=@KARAF_BIN@ stop
RemainAfterExit=yes

## Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300

## Place temp files in a secure directory, not /tmp
PrivateTmp=true

[Install]
WantedBy=multi-user.target

