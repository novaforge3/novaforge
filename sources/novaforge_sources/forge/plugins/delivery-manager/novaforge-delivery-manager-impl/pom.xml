<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>novaforge-delivery-manager</artifactId>
		<groupId>org.novaforge.forge.plugins</groupId>
		<version>3.8.0</version>
	</parent>

	<artifactId>novaforge-delivery-manager-impl</artifactId>
	<packaging>bundle</packaging>
	<name>NovaForge(tm) :: Plugins :: Delivery Manager :: Impl</name>
	<description>NovaForge(tm) :: Plugins :: Delivery Manager :: Impl</description>

	<dependencies>
		<dependency>
			<groupId>org.novaforge.forge.modules</groupId>
			<artifactId>novaforge-core-plugins</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.modules</groupId>
			<artifactId>novaforge-plugins-commons</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.modules</groupId>
			<artifactId>novaforge-commons-technical</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.plugins</groupId>
			<artifactId>novaforge-delivery-manager-api</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.plugins</groupId>
			<artifactId>novaforge-delivery-manager-tool-api</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
		    <groupId>org.apache.camel</groupId>
		    <artifactId>camel-core</artifactId>
		</dependency> 		
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>OSGI-INF/blueprint/blueprint.xml</include>
				</includes>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Meta-Persistence>META-INF/persistence.xml</Meta-Persistence>
						<Import-Package>javax.persistence;version="${geronimo.jpa.version}",org.novaforge.forge.plugins.commons.persistence.entity;version="${novaforge.version}",*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>target/classes/datasource/blueprint.xml</file>
									<type>xml</type>
									<classifier>datasource</classifier>
								</artifact>
								<artifact>
									<file>target/classes/datasource/datasource.delivery.cfg</file>
									<type>cfg</type>
									<classifier>datasource</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
