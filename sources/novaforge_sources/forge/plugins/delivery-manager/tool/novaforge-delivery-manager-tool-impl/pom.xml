<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>novaforge-delivery-manager-tool</artifactId>
		<groupId>org.novaforge.forge.plugins</groupId>
		<version>3.8.0</version>
	</parent>
	<artifactId>novaforge-delivery-manager-tool-impl</artifactId>
	<packaging>bundle</packaging>
	<name>NovaForge(tm) :: Tools :: Delivery Manager :: Impl</name>
	<description>NovaForge(tm) :: Tools :: Delivery Manager :: Impl</description>
	<dependencies>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-jpa_2.0_spec</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-validation_1.0_spec</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.openjpa</groupId>
			<artifactId>openjpa</artifactId>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.plugins</groupId>
			<artifactId>novaforge-delivery-manager-tool-api</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.plugins</groupId>
			<artifactId>novaforge-delivery-manager-tool-reporting-template</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.modules</groupId>
			<artifactId>novaforge-plugins-commons</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.modules</groupId>
			<artifactId>novaforge-core-plugins</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.modules</groupId>
			<artifactId>novaforge-commons-technical</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.modules</groupId>
			<artifactId>novaforge-commons-libs</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		<dependency>
			<groupId>org.novaforge.forge.modules</groupId>
			<artifactId>novaforge-commons-reporting</artifactId>
			<version>${novaforge.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sf.json-lib</groupId>
			<artifactId>json-lib</artifactId>
			<classifier>jdk15</classifier>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
		</dependency>
		<dependency>
			<groupId>org.xeustechnologies</groupId>
			<artifactId>jtar</artifactId>
			<version>1.0.4</version>
		</dependency>
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
		</dependency>	
	 <!--  test -->
		<dependency>
			<groupId>org.novaforge.forge.tooling</groupId>
			<artifactId>novaforge-tooling-tests-jpa</artifactId>
			<version>${novaforge.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>simple-jndi</groupId>
			<artifactId>simple-jndi</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-all</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<properties>
		<template-report>${project.build.directory}/template</template-report>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>${template-report}/report</directory>
				<includes>
					<include>*.rtpdesign</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-template</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<outputDirectory>${template-report}</outputDirectory>
							<excludeTransitive>true</excludeTransitive>
							<overWrite>true</overWrite>
							<includes>report/*.rtpdesign</includes>
							<artifactItems>
								<artifactItem>
									<groupId>org.novaforge.forge.plugins</groupId>
									<artifactId>novaforge-delivery-manager-tool-reporting-template</artifactId>
									<version>${novaforge.version}</version>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.bsc.maven</groupId>
				<artifactId>maven-processor-plugin</artifactId>
				<executions>
					<execution>
						<id>openjpa-metamodel-process</id>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>openjpa-metamodel-add-source</id>
					</execution>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>target/classes/datasource/blueprint.xml</file>
									<type>xml</type>
									<classifier>datasource</classifier>
								</artifact>
								<artifact>
									<file>target/classes/datasource/datasource.tool.delivery.cfg</file>
									<type>cfg</type>
									<classifier>datasource</classifier>
								</artifact>
								<artifact>
									<file>target/classes/tools.delivery.cfg</file>
									<type>cfg</type>
									<classifier>tools</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.openjpa</groupId>
				<artifactId>openjpa-maven-plugin</artifactId>
				<configuration>
					<includes>org/novaforge/forge/tools/deliverymanager/entity/*.class</includes>
					<excludes>org/novaforge/forge/tools/deliverymanager/entity/*_.class</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Embed-Transitive>true</Embed-Transitive>
						<Embed-Dependency>jtar;inline=true</Embed-Dependency>
						<_nouses>true</_nouses>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Meta-Persistence>META-INF/persistence.xml</Meta-Persistence>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.m2e</groupId>
				<artifactId>lifecycle-mapping</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
