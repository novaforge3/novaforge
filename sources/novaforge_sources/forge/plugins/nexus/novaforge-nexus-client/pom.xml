<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>novaforge-nexus</artifactId>
		<groupId>org.novaforge.forge.plugins</groupId>
		<version>3.8.0</version>
	</parent>
	<artifactId>novaforge-nexus-client</artifactId>
	<packaging>bundle</packaging>
	<name>NovaForge(tm) :: Plugins :: Nexus :: Client</name>
	<description>NovaForge(tm) :: Plugins :: Nexus :: Client REST</description>
	<dependencies>

		<dependency>
			<groupId>org.novaforge.forge.plugins</groupId>
			<artifactId>novaforge-nexus-api</artifactId>
			<version>${novaforge.version}</version>
		</dependency>
		
		<dependency>
		    <groupId>org.novaforge.forge.plugins</groupId>
		    <artifactId>novaforge-jersey-common</artifactId>
		    <version>${jersey2.version}</version>
		</dependency>

		<!-- JAX-RS Jersey -->
		<dependency>
			<groupId>org.glassfish.jersey.core</groupId>
			<artifactId>jersey-client</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.glassfish.jersey.core</groupId>
					<artifactId>jersey-common</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jersey.connectors</groupId>
			<artifactId>jersey-apache-connector</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.glassfish.jersey.core</groupId>
					<artifactId>jersey-common</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jersey.media</groupId>
			<artifactId>jersey-media-json-jackson</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.glassfish.jersey.core</groupId>
					<artifactId>jersey-common</artifactId>
				</exclusion>
			</exclusions>
		</dependency>	

    <dependency>
        <groupId>org.glassfish.jersey.media</groupId>
    	<artifactId>jersey-media-jaxb</artifactId>	
    	<version>${jersey2.version}</version>		
    	<exclusions>
			<exclusion>
				<groupId>org.glassfish.jersey.core</groupId>
				<artifactId>jersey-common</artifactId>
			</exclusion>
		</exclusions>
    </dependency>




	<!-- required by jersey-entity-filtering cf. its manifest org.glassfish.jersey.message.filtering -->
		<dependency>
		    <groupId>org.glassfish.jersey.core</groupId>
		    <artifactId>jersey-server</artifactId>
		    <version>${jersey2.version}</version>
		    <exclusions>
				<exclusion>
					<groupId>org.glassfish.jersey.core</groupId>
					<artifactId>jersey-common</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>javax.ws.rs</groupId>
			<artifactId>javax.ws.rs-api</artifactId>
			<version>2.0.1</version>
		</dependency>
	<!-- 
	<dependency>
		<groupId>javax.annotation</groupId>
		<artifactId>javax.annotation-api</artifactId>
		<version>1.2</version>
	</dependency> -->
		<!-- needed for authenticator to encode usename and password in base64 -->
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
		</dependency>
	
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.3.1</version>
				<executions>
					<execution>
						<id>enforce-version</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<bannedDependencies>
									<excludes>
										<!-- exclude all versions lower than 1.2.17 -->
										<exclude>com.sun.jersey:jersey-*:[0.0,2.0]</exclude>
									</excludes>	
								</bannedDependencies>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>