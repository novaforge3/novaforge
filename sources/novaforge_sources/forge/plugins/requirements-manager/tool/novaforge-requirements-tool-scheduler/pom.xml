<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>novaforge-requirements-tool</artifactId>
    <groupId>org.novaforge.forge.plugins</groupId>
    <version>3.8.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <artifactId>novaforge-requirements-tool-scheduler</artifactId>
  <packaging>bundle</packaging>
  <name>NovaForge(tm) :: Tools :: Requirements :: scheduler</name>
  <description>NovaForge(tm) :: Tools :: Requirements ::  scheduler  </description>


  <dependencies>
    <dependency>
      <groupId>org.novaforge.forge.plugins</groupId>
      <artifactId>novaforge-requirements-tool-common-api</artifactId>
      <version>${novaforge.version}</version>
    </dependency>
	<dependency>
		<groupId>commons-logging</groupId>
		<artifactId>commons-logging</artifactId>
	</dependency> 

    <!--QUARTZ move it later (parent pom)  -->
    <dependency>
      <groupId>org.quartz-scheduler</groupId>
      <artifactId>quartz</artifactId>
      <version>2.1.6</version>
    </dependency>
    
     <!--  Needed at runtime by quartz -->
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <scope>test</scope>
    </dependency>
           
     <!-- quartz uses slf4j -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.6.1</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Import-Package>!org.quartz,
                           ,!org.quartz.simpl
                           ,!javax.ejb
                           ,!javax.jms
                           ,!javax.mail.internet,
                           ,!com.mchange.v2.c3p0, 
                           ,!javax.management, 
                           ,!javax.xml.namespace, 
                           ,!org.xml.sax, 
                           ,!javax.servlet,
                           ,!javax.naming,
                           ,!javax.management.openmbean,
                           ,!org.w3c.dom,
                           ,!javax.xml.xpath,
                           ,!javax.sql,
                           ,!javax.transaction, 
                           ,!javax.rmi,
                           ,!javax.mail,
                           ,!javax.xml.bind,
                           ,!javax.servlet.http,
                           *
                           </Import-Package> 
            <Embed-Dependency>quartz</Embed-Dependency>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>




</project>
