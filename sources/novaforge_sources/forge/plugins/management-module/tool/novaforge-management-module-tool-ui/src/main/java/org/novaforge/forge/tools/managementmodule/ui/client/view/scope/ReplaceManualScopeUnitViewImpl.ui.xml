<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
  <ui:with field='res' type='org.novaforge.forge.tools.managementmodule.ui.client.ressources.ManagementModuleRessources' />
  <ui:with field='scoperes' type='org.novaforge.forge.tools.managementmodule.ui.client.properties.scope.ScopeMessage' />

  <g:VerticalPanel spacing="5" width='100%' height='100%' verticalAlignment='ALIGN_TOP'>
    <g:VerticalPanel spacing="5" width='100%'>
      <g:Label ui:field='addScopeRefToLotTitle' addStyleNames="{res.css.zoneTitle}" />
      <g:VerticalPanel spacing="5" width='100%' addStyleNames="{res.css.zonePanel}">
        <g:VerticalPanel spacing="5" width='100%'>
          <g:Label ui:field='deliverySearchTitle' addStyleNames="{res.css.subZoneTitle}" />
          <g:VerticalPanel spacing="5" width='100%'>
            <g:Label ui:field='scopeUnitListTitle' addStyleNames="{res.css.subZoneTitle}" width='97%' />
            <g:ScrollPanel alwaysShowScrollBars="false">
              <c:CellTree ui:field='scopeUnitTree' height="300px" />
            </g:ScrollPanel>
            </g:VerticalPanel>
        
        <g:HorizontalPanel height='100%' spacing="4" horizontalAlignment='ALIGN_RIGHT'>
        <g:Button addStyleNames="{res.css.important}" ui:field="buttonSave" />
        <g:Button addStyleNames="{res.css.important}" ui:field="buttonCancel" />
        
      </g:HorizontalPanel>
      
        </g:VerticalPanel>        
      </g:VerticalPanel>
    </g:VerticalPanel>
  </g:VerticalPanel>


</ui:UiBinder> 

