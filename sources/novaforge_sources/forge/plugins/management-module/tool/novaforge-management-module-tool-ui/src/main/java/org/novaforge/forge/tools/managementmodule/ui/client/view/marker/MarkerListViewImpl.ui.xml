<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    >
   <ui:with field='res' type='org.novaforge.forge.tools.managementmodule.ui.client.ressources.ManagementModuleRessources' />
   <g:ScrollPanel alwaysShowScrollBars="false">
	<g:VerticalPanel spacing="5" width='100%'>
	 <g:HorizontalPanel addStyleNames="{res.css.actionPanel}" horizontalAlignment='ALIGN_LEFT'>
	  <g:HorizontalPanel spacing="5" addStyleNames="{res.css.important}" horizontalAlignment='ALIGN_LEFT'>
       <g:Button addStyleNames="{res.css.important}" ui:field="buttonCreationMarker" />
       <g:Button addStyleNames="{res.css.important}" ui:field="buttonModifyMarker" />
       <g:Button addStyleNames="{res.css.important}" ui:field="buttonDeleteMarker" />
      </g:HorizontalPanel>
     </g:HorizontalPanel>
     <g:VerticalPanel spacing="5" width='100%'>
      <g:Label ui:field='markerListTitle' addStyleNames="{res.css.zoneTitle}" />
       <g:VerticalPanel spacing="5" width='100%' addStyleNames="{res.css.zonePanel}">
        <g:VerticalPanel addStyleNames="{res.css.cellPanel}">
         <g:Label ui:field='markerResultTitle' addStyleNames="{res.css.subZoneTitle}" />
         <c:CellTable addStyleNames='{res.css.cellTable}' ui:field='markerCellTable'/>
         <c:SimplePager ui:field='markerListPager' addStyleNames='{res.css.zoneTable}' />
        </g:VerticalPanel>
       </g:VerticalPanel>
      </g:VerticalPanel>
     </g:VerticalPanel>
   </g:ScrollPanel>
</ui:UiBinder> 