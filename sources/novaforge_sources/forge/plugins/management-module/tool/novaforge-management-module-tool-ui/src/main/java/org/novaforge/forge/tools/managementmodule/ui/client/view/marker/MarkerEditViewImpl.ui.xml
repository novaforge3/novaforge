<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:common="urn:import:org.novaforge.forge.tools.managementmodule.ui.client.view.commons.validation">

 <ui:with field='res' type='org.novaforge.forge.tools.managementmodule.ui.client.ressources.ManagementModuleRessources' />
 <g:ScrollPanel alwaysShowScrollBars="false">
  <g:VerticalPanel width='100%' spacing="5" verticalAlignment='ALIGN_TOP'>
    <g:HorizontalPanel addStyleNames="{res.css.actionPanel}" horizontalAlignment='ALIGN_LEFT'>
      <g:HorizontalPanel spacing="5" horizontalAlignment='ALIGN_LEFT'>
        <g:Button addStyleNames="{res.css.important}" ui:field="buttonAddMarker" />
        <g:Button addStyleNames="{res.css.important}" ui:field="buttonSaveMarker" />
        <g:Button addStyleNames="{res.css.important}" ui:field="buttonCancelMarker" />
      </g:HorizontalPanel>
    </g:HorizontalPanel>
    <g:VerticalPanel spacing="5" width='100%' verticalAlignment='ALIGN_TOP'>
      <g:Label ui:field='markerCreationTitle' addStyleNames="{res.css.zoneTitle}" />
      <g:VerticalPanel addStyleNames="{res.css.zonePanel}">
        <g:Grid ui:field="markerGrid" addStyleNames="{res.css.infoGrid}">
          <g:row>
            <g:customCell>
              <g:Label ui:field="markerNameLabel" addStyleNames="{res.css.gridLabel}" />
            </g:customCell>
            <g:customCell>
              <common:TextBoxValidation ui:field="markerNameValidator" />
            </g:customCell>
          </g:row>
          <g:row>
            <g:customCell>
              <g:Label ui:field="markerDateLabel" addStyleNames="{res.css.gridLabel}" />
            </g:customCell>
           	<g:customCell>
              <common:DateBoxValidation ui:field="markerDatePicker" />
            </g:customCell>
          </g:row>
          <g:row>
          <g:customCell>
              <g:Label ui:field="markerTypeListLabel" addStyleNames="{res.css.gridLabel}" />
            </g:customCell>
            <g:customCell>
                <g:ListBox ui:field="markerTypeList" multipleSelect="false" addStyleNames="{res.css.gridTB}" />
            </g:customCell>
          </g:row>
          <g:row>
            <g:customCell>
              <g:Label ui:field="markerDescLabel" addStyleNames="{res.css.gridLabel}" />
            </g:customCell>
            <g:customCell>
              <common:TextAreaValidation ui:field="markerDescValidator" />
            </g:customCell>
          </g:row>
        </g:Grid>
      </g:VerticalPanel>
    </g:VerticalPanel>
    <g:HorizontalPanel spacing="5" horizontalAlignment='ALIGN_LEFT' addStyleNames="{res.css.bottomButonPanel}">
    </g:HorizontalPanel>
  </g:VerticalPanel>
 </g:ScrollPanel>
</ui:UiBinder> 
