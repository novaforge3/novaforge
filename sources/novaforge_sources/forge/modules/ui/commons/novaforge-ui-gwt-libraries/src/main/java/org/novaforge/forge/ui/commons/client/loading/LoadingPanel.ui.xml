<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
						 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res'
		type='org.novaforge.forge.ui.commons.client.loading.LoadingResources' />

	<g:VerticalPanel horizontalAlignment="ALIGN_CENTER">
		<g:Label ui:field="loadingErrorLabel" addStyleNames="{res.style.red}" visible="false"/>
		<g:HorizontalPanel ui:field="loadingImagePanel"
			horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:Image ui:field="loadingImage" addStyleNames="{res.style.center}" />
			<g:Label ui:field="loadingRightLabel" addStyleNames="{res.style.green}" />
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="loadingLabelPanel"
			horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_TOP">
			<g:Label ui:field="loadingBottomLabel" addStyleNames="{res.style.green}" />
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 
