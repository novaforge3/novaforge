<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:db="urn:import:com.google.gwt.user.datepicker.client">
  <ui:with field='res' type='org.novaforge.forge.ui.historization.client.resources.LoggingResources' />
 
 <g:ScrollPanel alwaysShowScrollBars="false">
    <g:VerticalPanel spacing="5" width='100%' height='100%' verticalAlignment='ALIGN_TOP'>
    
    <g:HorizontalPanel spacing="5" horizontalAlignment='ALIGN_RIGHT'>
    	<g:Label ui:field='loggingPurgeTitle' addStyleNames="{res.css.zoneTitle}" />
    </g:HorizontalPanel>
    
    <g:HorizontalPanel spacing="5" addStyleNames="{res.css.borderCell}" horizontalAlignment='ALIGN_LEFT'>
		<g:HorizontalPanel spacing="5">
			<g:Label ui:field='limiteDateLabel' />
			<db:DateBox ui:field='limitDateBox' />
			<g:Button ui:field='buttonValidatePurge' />
		</g:HorizontalPanel>
    </g:HorizontalPanel>  
      
    </g:VerticalPanel>
 </g:ScrollPanel>
</ui:UiBinder> 
