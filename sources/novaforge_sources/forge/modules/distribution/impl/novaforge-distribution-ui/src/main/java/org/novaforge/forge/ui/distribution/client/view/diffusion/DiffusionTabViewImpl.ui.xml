<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
  <ui:with field='res' type='org.novaforge.forge.ui.distribution.client.resource.DistributionResources' />

  <g:ScrollPanel alwaysShowScrollBars="false">
    <g:VerticalPanel spacing="5" width='100%' height='100%' verticalAlignment='ALIGN_TOP'>
      <g:VerticalPanel spacing="5" width='100%'>
        <g:Label ui:field='diffusionTitle' addStyleNames="{res.css.zoneTitle}" />
        <g:VerticalPanel spacing="5" width='100%' addStyleNames="{res.css.zonePanel}">
          <g:VerticalPanel spacing="5" width='100%'>
            <g:VerticalPanel addStyleNames="{res.css.cellPanel}">
              <g:Label ui:field='targetForgesTitle' addStyleNames="{res.css.subZoneTitle}" />
              <c:CellTable addStyleNames='{res.css.cellTable}' ui:field='targetForgesCellTable' />
              <c:SimplePager ui:field='targetForgesPager' addStyleNames='{res.css.zoneTable}' />
            </g:VerticalPanel>
          </g:VerticalPanel>
        </g:VerticalPanel>
        <g:Label ui:field='syncReferentielTitle' addStyleNames="{res.css.zoneTitle}" />
        <g:VerticalPanel spacing="5" width='100%' addStyleNames="{res.css.zonePanel}">
          <g:HorizontalPanel spacing="5">
            <g:CheckBox ui:field='projetRefCheck' formValue="projetRef" />
            <g:Label ui:field='projetRefLabel' />
          </g:HorizontalPanel>
          <g:HorizontalPanel spacing="5">
            <g:CheckBox ui:field='templateCheck' formValue="templateCheck" />
            <g:Label ui:field='templateLabel' />
          </g:HorizontalPanel>
          <g:HorizontalPanel spacing="5">
            <g:CheckBox ui:field='toolsCheck' formValue="toolsRef" />
            <g:Label ui:field='toolsLabel' />
          </g:HorizontalPanel>
          <g:HorizontalPanel spacing="5">
            <g:CheckBox ui:field='indicatorCheck' formValue="toolsRef" />
            <g:Label ui:field='indicatorLabel' />
          </g:HorizontalPanel>
        </g:VerticalPanel>
      </g:VerticalPanel>
      <g:HorizontalPanel spacing="5" horizontalAlignment='ALIGN_LEFT' addStyleNames="{res.css.bottomButonPanel}">
        <g:Button styleName="{res.css.important}" ui:field="diffuseButton" />
      </g:HorizontalPanel>
    </g:VerticalPanel>
  </g:ScrollPanel>
</ui:UiBinder>
