<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:common="urn:import:org.novaforge.forge.ui.commons.client.validation">

	<ui:with field='res'
		type='org.novaforge.forge.ui.forge.reference.client.resources.ReferenceResources' />

	<g:VerticalPanel width='100%' spacing="5"
		verticalAlignment='ALIGN_TOP'>
		<g:VerticalPanel spacing="5" width='100%'
			verticalAlignment='ALIGN_TOP'>
			<g:Label ui:field='applicationAddTitle' addStyleNames="{res.style.zoneTitle}" />
			<g:VerticalPanel addStyleNames="{res.style.zonePanel}">
				<g:Grid ui:field="applicationGrid" addStyleNames="{res.style.infoGrid}">
					<g:row>
						<g:customCell>
							<g:Label ui:field="categoryNameLabel" addStyleNames="{res.style.gridLabel}" />
						</g:customCell>
						<g:customCell>
							<g:ListBox ui:field="categoryName" addStyleNames="{res.style.gridTB}" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label ui:field="typeNameLabel" addStyleNames="{res.style.gridLabel}" />
						</g:customCell>
						<g:customCell>
							<g:ListBox ui:field="typeName" addStyleNames="{res.style.gridTB}" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label ui:field="applicationNameLabel" addStyleNames="{res.style.gridLabel}" />
						</g:customCell>
						<g:customCell>
							<common:TextBoxValidation ui:field="applicationName"
								addStyleNames="{res.style.gridTB}" />
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:VerticalPanel>
		</g:VerticalPanel>
		<g:VerticalPanel spacing="5" width='100%'>
			<g:Label ui:field='rolesTitle' addStyleNames="{res.style.zoneTitle}" />
			<g:VerticalPanel addStyleNames="{res.style.zonePanel}">
				<g:HorizontalPanel verticalAlignment='ALIGN_MIDDLE'
					horizontalAlignment='ALIGN_CENTER' ui:field="loadingPanel">
					<g:Image ui:field="loadingImage" />
					<g:Label ui:field="loadingLabel" horizontalAlignment='ALIGN_CENTER' />
				</g:HorizontalPanel>
				<g:HorizontalPanel verticalAlignment='ALIGN_MIDDLE'
					horizontalAlignment='ALIGN_CENTER' ui:field="waitingPanel">
					<g:Label ui:field="waitingLabel" horizontalAlignment='ALIGN_CENTER'
						addStyleNames='{res.style.important}' />
				</g:HorizontalPanel>
				<c:CellTable addStyleNames='{res.style.cellTable}'
					ui:field='rolesCellTable' />
				<c:SimplePager ui:field='rolesPager' addStyleNames='{res.style.zoneTable}' />
			</g:VerticalPanel>
		</g:VerticalPanel>
		<g:HorizontalPanel spacing="5" horizontalAlignment='ALIGN_LEFT'
			addStyleNames="{res.style.bottomButonPanel}">
			<g:Button styleName="{res.style.important}" ui:field="buttonSaveGroup" />
			<g:Button styleName="{res.style.important}" ui:field="buttonCancelGroup" />
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 
