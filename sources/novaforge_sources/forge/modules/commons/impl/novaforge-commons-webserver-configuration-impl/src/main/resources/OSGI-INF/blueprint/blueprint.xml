<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
					 xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
					 xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0"
					 xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd 
	http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd 
	http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0 http://aries.apache.org/schemas/blueprint-ext/blueprint-ext-1.1.xsd"
	default-activation="lazy">
<!-- System property place holder -->
	<ext:property-placeholder placeholder-prefix="$(" placeholder-suffix=")" />
<!-- Property place holder -->
	<cm:property-placeholder persistent-id="commons.webserver" update-strategy="reload">
		<cm:default-properties>
			<cm:property name="confFolder" value="$(NOVA_HOME)/system/httpd/conf.d/services/proxy" />
			<cm:property name="reloadCmd" value="sudo apachectl graceful" />
		</cm:default-properties>
	</cm:property-placeholder>

	<bean id="webServerConfigurator"
		class="org.novaforge.forge.commons.webserver.configuration.internal.services.WebServerConfiguratorImpl">
		<property name="confFolder" value="${confFolder}" />
		<property name="reloadCmd" value="${reloadCmd}" />
	</bean>

	<service ref="webServerConfigurator" interface="org.novaforge.forge.commons.webserver.configuration.services.WebServerConfigurator" />

</blueprint>
